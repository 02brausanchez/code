# cadena de la operacion 
valor = (input("Dame un valor que sea (+,-,*,/): "))

# operacion = "8/6"
# extrae los operandos

if '+' in valor: 
    operandos = valor.split('+') 
elif '*' in valor : 
    operandos = valor.split('*') 
elif '-' in valor: 
    operandos = valor.split('-') 
elif '/' in valor: 
    operandos = valor.split('/') 
#else:
    #print('error')
if len(operandos) == 2 and operandos[0].isnumeric() and operandos[1].isnumeric():     
    print(eval(valor)) 
else:
    print('error') 
    
print(operandos) 
print(operandos[0].isnumeric()) 
print(operandos[1].isnumeric()) 



operador = ''
operandos = [] 

for op in '+ , - , x, ':
    if op in valor: 
        operardor = op
        operandos = valor.split(operardor)
    print(operardor) 
    print(operandos) 



##### version mejorada pero con algunos detalles: ##### 
# cadena de la operacion 
operacion  = (input("Dame un valor que sea (+,-,*,/): "))

# operacion = "8/6"
# extrae los operandos

if '+' in operacion: 
    operandos = operacion.split('+') 
elif '*' in operacion : 
    operandos = operacion.split('*') 
elif '-' in operacion: 
    operandos = operacion.split('-') 
elif '/' in operacion: 
    operandos = operacion.split('/') 
else:
    print('error')
if len(operandos) == 2 and operandos[0].isnumeric() and operandos[1].isnumeric():     
    res = eval(operacion)
    print(f'{operacion} = {res}') 
else:
    print('error') 
    
print(operandos) 
print(operandos[0].isnumeric()) 
print(operandos[1].isnumeric()) 



operador = ''
operandos = [] 

for op in '+-x/*':
    if op in operacion: 
        operardor = op
        operandos = operacion.split(operardor)
    print(operador) 
    print(operandos) 


operacion



