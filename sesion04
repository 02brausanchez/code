if '+' in prueba2: 
    print('es una suma') 
else: 
    if 'x' in prueba2: 
        print('es un producto') 
    else: 
        print('error') 

# prueba si la cadena corresponde a una operacion conocida version 2  
if '+' in prueba2: 
    print('es una suma') 
elif 'x' in prueba2: 
    print('es un producto') 
elif '-' in prueba2: 
    print('es una resta') 
elif '/' in prueba2: 
    print('es una division')
else:
    print('error') 


# cadena de operacion 
operacion = "45/6" 

if '+' in prueba2: 
    operandos = operacion.split('+') 
elif 'x' in prueba2: 
    operandos = operacion.split('x') 
elif '-' in prueba2: 
    operandos = operacion.split('-') 
elif '/' in prueba2: 
    operandos = operacion.split('/') 
else:
    print('error') 
print(operandos) 




# cadena de la operacion 
operacion = "8/6"
# extrae los operandos

if '+' in operacion: 
    operandos = operacion.split('+') 
elif 'x' in operacion: 
    operandos = operacion.split('x') 
elif '-' in operacion: 
    operandos = operacion.split('-') 
elif '/' in operacion: 
    operandos = operacion.split('/') 
else:
    print('error')
if len(operandos) == 2 and operandos[0].isnumeric() and operandos[1].isnumeric():     
    print('ok') 

print(operandos) 
print(operandos[0].isnumeric()) 
print(operandos[1].isnumeric()) 



